{
	"name": "akunzai/joomla-external-login",
	"type": "project",
	"description": "External Login for Joomla!",
	"keywords": [
		"external",
		"login",
		"Joomla"
	],
	"homepage": "http://github.com/akunzai/joomla-external-login",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Charley Wu",
			"email": "akunzai@gmail.com"
		},
		{
			"name": "Christophe Demko",
			"email": "chdemko@gmail.com",
			"homepage": "http://chdemko.com",
			"role": "Developer"
		}
	],
	"repositories": [
		{
			"type": "package",
			"package": {
				"name": "joomla/joomla-cms",
				"version": "3.10.11",
				"dist": {
					"url": "https://github.com/joomla/joomla-cms/releases/download/3.10.11/Joomla_3.10.11-Stable-Full_Package.zip",
					"type": "zip"
				},
				"source": {
					"url": "https://github.com/joomla/joomla-cms.git",
					"type": "git",
					"reference": "tags/3.10.11"
				}
			}
		},
		{
			"type": "package",
			"package": {
				"name": "hamidionline/joomla-stubs",
				"version": "1.0.0",
				"source": {
					"url": "https://github.com/hamidionline/joomla-stubs",
					"type": "git",
					"reference": "master"
				}
			}
		}
	],
	"require": {
		"php": ">=7.4.0"
	},
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^3.12",
		"hamidionline/joomla-stubs": "*",
		"joomla/joomla-cms": "3.10.11",
		"phpstan/phpstan": "^1.8"
	},
	"scripts": {
		"lint": [
			"php -v",
			"! find ./src -type f -name '*.php' -exec php -d display_errors=1 -d error_reporting=-1 -l {} \\; 2>&1 | grep -v ^'No syntax errors'",
			"php-cs-fixer fix --diff --dry-run"
		],
		"build": [
			"VERSION=$(git describe --tags --abbrev=0); echo $VERSION; grep -rl '##VERSION##' ./src | xargs sed -i.bak \"s/##VERSION##/$VERSION/\"",
			"mkdir -p build",
			"cd src/pkg_externallogin/com_externallogin; zip -r ../com_externallogin.zip . -x '*.bak'",
			"cd src/pkg_externallogin/mod_externallogin_admin; zip -r ../mod_externallogin_admin.zip . -x '*.bak'",
			"cd src/pkg_externallogin/mod_externallogin_site; zip -r ../mod_externallogin_site.zip . -x '*.bak'",
			"cd src/pkg_externallogin/plg_authentication_externallogin; zip -r ../plg_authentication_externallogin.zip . -x '*.bak'",
			"cd src/pkg_externallogin/plg_system_externallogin; zip -r ../plg_system_externallogin.zip . -x '*.bak'",
			"cd src/pkg_externallogin; zip -r ../../build/pkg_externallogin.zip pkg_externallogin.xml language *.zip; rm *.zip",
			"cd src/plg_system_caslogin; zip -r ../../build/plg_system_caslogin.zip . -x '*.bak'",
			"cd src/plg_user_cbexternallogin; zip -r ../../build/plg_user_cbexternallogin.zip . -x '*.bak'",
			"grep -rl '##VERSION##' ./src | xargs -I{} sh -c 'mv $1 ${1%.bak}' _ {}"
		]
	},
	"config": {
		"sort-packages": true
	}
}