{
	"name": "akunzai/joomla-external-login",
	"type": "project",
	"description": "External Login for Joomla!",
	"keywords": [
		"external",
		"login",
		"Joomla!"
	],
	"homepage": "http://github.com/akunzai/joomla-external-login",
	"license": "GNU General Public License, version 2",
	"authors": [
		{
			"name": "Christophe Demko",
			"email": "chdemko@gmail.com",
			"homepage": "http://chdemko.com",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=7.4.0"
	},
	"require-dev": {
		"alchemy/zippy": "^1.0",
		"symfony/yaml": "^6.1",
		"friendsofphp/php-cs-fixer": "^3.11"
	},
	"scripts": {
		"lint": [
			"! find . -type f -name '*.php' -exec php -d display_errors=1 -d error_reporting=-1 -l {} \\; 2>&1 | grep -v ^'No syntax errors'",
			"php-cs-fixer fix --diff --dry-run"
		],
		"build": [
			"bin/server",
			"bin/pkg_externallogin/create-archive",
			"bin/plg_system_caslogin/create-archive",
			"bin/plg_user_cbexternallogin/create-archive"
		]
	}
}