{
	"name": "akunzai/joomla-external-login",
	"description": "External Login for Joomla!",
	"type": "project",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Charley Wu",
			"email": "akunzai@gmail.com"
		},
		{
			"name": "Christophe Demko",
			"email": "chdemko@gmail.com",
			"homepage": "http://chdemko.com",
			"role": "Developer"
		}
	],
	"config": {
		"preferred-install": "dist",
		"sort-packages": true
	},
	"repositories": [
		{
			"type": "package",
			"package": {
				"name": "joomla/joomla-cms",
				"version": "3.10.11",
				"dist": {
					"url": "https://github.com/joomla/joomla-cms/releases/download/3.10.11/Joomla_3.10.11-Stable-Full_Package.zip",
					"type": "zip"
				},
				"source": {
					"url": "https://github.com/joomla/joomla-cms.git",
					"type": "git",
					"reference": "tags/3.10.11"
				}
			}
		},
		{
			"type": "package",
			"package": {
				"name": "akunzai/joomla-stubs",
				"version": "master",
				"source": {
					"url": "https://github.com/akunzai/joomla-stubs.git",
					"type": "git",
					"reference": "master"
				}
			}
		}
	],
	"require": {
		"php": ">=7.4.0"
	},
	"require-dev": {
		"akunzai/joomla-stubs": "dev-master",
		"friendsofphp/php-cs-fixer": "^3.12",
		"joomla/joomla-cms": "3.10.11",
		"phpstan/phpstan": "^1.8"
	},
	"prefer-stable": true,
	"scripts": {
		"lint": [
			"php -v",
			"! find ./src -type f -name '*.php' -exec php -d display_errors=1 -d error_reporting=-1 -l {} \\; 2>&1 | grep -v ^'No syntax errors'",
			"php-cs-fixer fix --diff --dry-run"
		],
		"fix": [
			"php-cs-fixer -- fix"
		],
		"phpstan": [
			"phpstan analyse"
		],
		"phpstan-baseline": [
			"phpstan analyse --generate-baseline"
		],
		"build": [
			"php ./bundle.php ./src/administrator/modules/mod_externallogin_admin/mod_externallogin_admin.xml ./src/packages/mod_externallogin_admin.zip",
			"php ./bundle.php ./src/com_externallogin.xml ./src/packages/com_externallogin.zip",
			"php ./bundle.php ./src/modules/mod_externallogin_site/mod_externallogin_site.xml ./src/packages/mod_externallogin_site.zip",
			"php ./bundle.php ./src/plugins/authentication/externallogin/externallogin.xml ./src/packages/plg_authentication_externallogin.zip",
			"php ./bundle.php ./src/plugins/system/externallogin/externallogin.xml ./src/packages/plg_system_externallogin.zip",
			"php ./bundle.php ./src/plugins/system/caslogin/caslogin.xml ./build/plg_system_caslogin.zip",
			"php ./bundle.php ./src/plugins/user/cbexternallogin/cbexternallogin.xml ./build/plg_user_cbexternallogin.zip",
			"php ./bundle.php ./src/pkg_externallogin.xml ./build/pkg_externallogin.zip",
			"rm -rf ./src/packages"
		]
	}
}